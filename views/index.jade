extends layout

block title
    title EasySO - SSO
  //if (gte IE 6)&(lte IE 8) noscript link(rel='stylesheet', href='css/fallback.css')
block style
    link(rel='stylesheet', type='text/css', media='screen', href='style/style_login.css')

block body
    body
    #container2
        img(src='images/logo.png', width='100', height='100', style='position:relative; margin:auto;')
    #container
        form#formLogin(action='', method='post')
            .login LOGIN
            .username-text Username:
            .password-text Password:
            .username-field
                input#username.oklogin(type='text', name='username')
            .password-field
                input#password.oklogin(type='password', name='pwd')
        input#remember-me(type='checkbox', name='remember-me')
        label(for='remember-me') Remember me
        .forgot-usr-pwd Hai dimenticato la password?
      input(type='button', name='submit', value='VAI', onclick='sottoMettiForm();')
    #footer
        | Software realizzato da
        a(href='http://www.gesan.it', target='_blank')  Gesan s.r.l.

script(type='text/javascript', src='/js/jquery-3.2.1.min.js')
script(type='text/javascript', charset='utf-8', src='/js/login_JQ.js')